---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
---

<Layout title="Contact | Green Orbit Academy">

  <main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>Get in Touch</h1>
              <p class="mb-0">
                Have questions or want to discuss how Green Orbit Academy can support your teamâ€™s growth?
          Our team is ready to provide guidance on courses, workshops, masterclasses, and tailored training programmes.
          Reach out today to start a conversation about professional development, sustainability, and digital transformation in your organisation.
              </p>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="/">Home</a></li>
            <li class="current">Contact</li>
          </ol>
        </div>
      </nav>
    </div>

    <!-- Google Map -->
    <section class="map mb-5" data-aos="fade-up" data-aos-delay="200">
      <iframe
        style="border:0; width:100%; height:300px;"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d77482.3870744158!2d-1.2136720127925895!3d52.63604840101941!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487742ab49b76c73%3A0x9a151d2a6fb49cb8!2sLeicester!5e0!3m2!1sen!2suk!4v1764828097369!5m2!1sen!2suk"
        frameborder="0"
        allowfullscreen
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </section>

    <!-- Contact Info & Form -->
    <section id="contact" class="contact section container" data-aos="fade-up" data-aos-delay="100">
      <div class="row gy-4">

        <!-- Contact Info -->
        <div class="col-lg-4">
          <div class="info-item d-flex mb-4">
            <i class="bi bi-geo-alt flex-shrink-0"></i>
            <div>
              <h3>Address</h3>
              <p>Leicester, UK</p>
            </div>
          </div>

          <div class="info-item d-flex mb-4">
            <i class="bi bi-telephone flex-shrink-0"></i>
            <div>
              <h3>Call Us</h3>
              <p>+44 116 483 0155</p>
            </div>
          </div>

          <div class="info-item d-flex mb-4">
            <i class="bi bi-envelope flex-shrink-0"></i>
            <div>
              <h3>Email Us</h3>
              <p>hello@greenorbit.academy</p>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-8">
          <form action="/forms/contact.php" method="post" class="php-email-form">
            <div class="row gy-4">
              <div class="col-md-6">
                <input type="text" name="name" class="form-control" placeholder="Your Name" required>
              </div>
              <div class="col-md-6">
                <input type="email" name="email" class="form-control" placeholder="Your Email" required>
              </div>
              <div class="col-md-12">
                <input type="text" name="subject" class="form-control" placeholder="Subject" required>
              </div>
              <div class="col-md-12">
                <textarea name="message" class="form-control" rows="6" placeholder="Message" required></textarea>
              </div>
              <div class="col-md-12 text-center">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
                <button type="submit">Send Message</button>
              </div>
            </div>
          </form>
        </div>

      </div>
    </section>

<CTA/>

  </main>


</Layout>