<!-- Learning Opportunities Section -->
<section id="learning" class="courses section">

  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2>Learning Opportunities</h2>
    <p>Explore Our Courses, Workshops, and Masterclasses</p>
  </div><!-- End Section Title -->

  <div class="container">
    <div class="row">

      <!-- Courses -->
      <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
        <div class="course-item">
          <a href="/courses">
            <img src="img/course/course-1.webp" class="img-fluid" alt="Courses">
          </a>
          <div class="course-content">
            <h3><a href="/courses">Professional Courses</a></h3>
            <p class="description">
              Structured programmes designed to enhance sector-specific skills. Build expertise in digital marketing, web development, content creation, and more.
            </p>
          </div>
        </div>
      </div><!-- End Courses Item -->

      <!-- Workshops -->
      <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-md-0" data-aos="zoom-in" data-aos-delay="200">
        <div class="course-item">
          <a href="/workshops">
            <img src="img/course/course-2.webp" class="img-fluid" alt="Workshops">
          </a>
          <div class="course-content">
            <h3><a href="workshops">Hands-on Workshops</a></h3>
            <p class="description">
              Interactive sessions to apply learning in real-world contexts. Explore branding strategy, sustainable marketing, campaign planning, and storytelling.
            </p>
          </div>
        </div>
      </div><!-- End Workshops Item -->

      <!-- Masterclasses -->
      <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-lg-0" data-aos="zoom-in" data-aos-delay="300">
        <div class="course-item">
          <a href="/masterclasses">
            <img src="img/course/course-3.webp" class="img-fluid" alt="Masterclasses">
          </a>
          <div class="course-content">
            <h3><a href="masterclasses">Advanced Masterclasses</a></h3>
            <p class="description">
              Deep-dive sessions led by industry experts. Develop strategic insight and advanced skills in communications, space & sustainability, and AI & digital transformation.
            </p>
          </div>
        </div>
      </div><!-- End Masterclasses Item -->

    </div>
  </div>
</section><!-- /Learning Opportunities Section -->