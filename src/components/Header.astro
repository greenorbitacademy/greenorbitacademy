---
<header id="header" class="header d-flex align-items-center sticky-top">
  <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

    <!-- Logo -->
    <a href="/" class="logo d-flex align-items-center me-auto">
      <h1 class="sitename m-0">Green Orbit Academy</h1>
    </a>

    <!-- Navigation -->
    <nav id="navmenu" class="navmenu" aria-label="Main Navigation">
      <ul>
        <li><a href="/" class="active">Home</a></li>

        <li class="dropdown">
          <a href="/about" aria-haspopup="true" aria-expanded="false">
            <span>About</span> <i class="bi bi-chevron-down toggle-dropdown"></i>
          </a>
          <ul class="dropdown-menu">
            <li><a href="/trainers">Trainers</a></li>
            <li><a href="/pricing">Pricing</a></li>
          </ul>
        </li>

        <li><a href="/webinars">Webinars</a></li>

        <li class="dropdown">
          <a href="#" aria-haspopup="true" aria-expanded="false">
            <span>CPD</span> <i class="bi bi-chevron-down toggle-dropdown"></i>
          </a>
          <ul class="dropdown-menu">
            <li><a href="/courses">Courses</a></li>
            <li><a href="/workshops">Workshops</a></li>
            <li><a href="/masterclasses">Masterclasses</a></li>
            <li><a href="/training">Training Programmes</a></li>
          </ul>
        </li>
      </ul>

      <!-- Mobile toggle button -->
      <button class="mobile-nav-toggle d-xl-none" aria-controls="navmenu" aria-expanded="false">
        <i class="bi bi-list"></i>
        <span class="visually-hidden">Toggle navigation</span>
      </button>
    </nav>

    <!-- Contact button -->
    <a class="btn-getstarted" href="/contact"><strong>Contact Us</strong></a>

  </div>
</header>

<style>
/* Smooth dropdown transitions */
.navmenu .dropdown-menu {
  display: none;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  padding-left: 0;
  list-style: none;
}

.navmenu .dropdown-active {
  display: block;
  max-height: 500px; /* Adjust based on content */
}

.navbar-mobile {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  overflow-y: auto;
  padding-top: 70px; /* adjust for header height */
  z-index: 999;
}
</style>

<script>
  const mobileToggle = document.querySelector('.mobile-nav-toggle');
  const navmenu = document.getElementById('navmenu');

  // Toggle mobile menu
  mobileToggle.addEventListener('click', () => {
    navmenu.classList.toggle('navbar-mobile');
    mobileToggle.setAttribute('aria-expanded', navmenu.classList.contains('navbar-mobile'));
    mobileToggle.querySelector('i').classList.toggle('bi-list');
    mobileToggle.querySelector('i').classList.toggle('bi-x');
  });

  // Dropdown toggle for mobile
  document.querySelectorAll('.navmenu .dropdown > a').forEach(el => {
    el.addEventListener('click', function (e) {
      if (navmenu.classList.contains('navbar-mobile')) {
        e.preventDefault();
        const dropdown = this.nextElementSibling;
        const expanded = dropdown.classList.toggle('dropdown-active');
        this.setAttribute('aria-expanded', expanded);
      }
    });
  });

  // Close mobile menu when clicking outside or on link (optional)
  document.querySelectorAll('#navmenu a:not(.toggle-dropdown)').forEach(link => {
    link.addEventListener('click', () => {
      if (navmenu.classList.contains('navbar-mobile')) {
        navmenu.classList.remove('navbar-mobile');
        mobileToggle.setAttribute('aria-expanded', false);
        mobileToggle.querySelector('i').classList.add('bi-list');
        mobileToggle.querySelector('i').classList.remove('bi-x');
      }
    });
  });
</script>